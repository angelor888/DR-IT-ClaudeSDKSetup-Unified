# Example environment configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file with real credentials to version control

# Airtable Integration
AIRTABLE_API_KEY="your_airtable_api_key_here"

# GitHub Integration  
GITHUB_TOKEN="your_github_personal_access_token_here"

# Google Services (Gmail, Drive, Calendar)
GMAIL_CLIENT_ID="your_gmail_client_id_here"
GMAIL_CLIENT_SECRET="your_gmail_client_secret_here"
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"
GOOGLE_DRIVE_CLIENT_ID="your_google_drive_client_id_here"
GOOGLE_DRIVE_CLIENT_SECRET="your_google_drive_client_secret_here"
GOOGLE_DRIVE_REFRESH_TOKEN="your_google_drive_refresh_token_here"

# Jobber Integration
JOBBER_ACCESS_TOKEN="your_jobber_access_token_here"
JOBBER_CLIENT_ID="your_jobber_client_id_here"
JOBBER_CLIENT_SECRET="your_jobber_client_secret_here"
JOBBER_REFRESH_TOKEN="your_jobber_refresh_token_here"

# Slack Integration
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token-here"
SLACK_CLIENT_ID="your_slack_client_id_here"
SLACK_CLIENT_SECRET="your_slack_client_secret_here"
SLACK_SIGNING_SECRET="your_slack_signing_secret_here"
SLACK_VERIFICATION_TOKEN="your_slack_verification_token_here"

# QuickBooks Integration
QUICKBOOKS_ACCESS_TOKEN="your_quickbooks_access_token_here"
QUICKBOOKS_CONSUMER_KEY="your_quickbooks_consumer_key_here"
QUICKBOOKS_CONSUMER_SECRET="your_quickbooks_consumer_secret_here"
QUICKBOOKS_REALM_ID="your_quickbooks_realm_id_here"
QUICKBOOKS_REFRESH_TOKEN="your_quickbooks_refresh_token_here"
QUICKBOOKS_SANDBOX=false

# SendGrid Email
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"
SENDGRID_FROM_EMAIL="your_from_email@yourdomain.com"

# Firebase Configuration
FIREBASE_PROJECT_ID="your_firebase_project_id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key_here\n-----END PRIVATE KEY-----"
FIREBASE_SERVICE_ACCOUNT_PATH="./firebase-service-account.json"

# AI Services
GROK_API_KEY="your_grok_api_key_here"
# Optional: Uncomment for additional AI providers
# OPENAI_API_KEY="your_openai_api_key_here"
# ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# Twilio SMS/Voice Configuration
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"
TWILIO_PHONE_NUMBER="your_twilio_phone_number_here"
TWILIO_WEBHOOK_SECRET="your_twilio_webhook_secret_here"

# Feature Flags
FEATURE_SLACK_ENABLED=true
FEATURE_JOBBER_ENABLED=true
FEATURE_TWILIO_ENABLED=true
FEATURE_GROK_ENABLED=true