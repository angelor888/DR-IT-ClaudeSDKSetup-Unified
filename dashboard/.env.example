# DuetRight Dashboard Environment Configuration
# Copy this file to ../.env (parent directory) and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=8080

# ============================================
# FIREBASE CONFIGURATION (REQUIRED)
# ============================================
# Firebase Admin SDK credentials
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"

# Firebase Client SDK config (for frontend)
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# ============================================
# SLACK CONFIGURATION (OPTIONAL)
# ============================================
# Required for Slack integration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Slack channel IDs
SLACK_CHANNEL_ID=C1234567890
SLACK_NOTIFICATIONS_CHANNEL_ID=C0987654321

# ============================================
# JOBBER CONFIGURATION (OPTIONAL)
# ============================================
# OAuth credentials for Jobber
JOBBER_CLIENT_ID=your-jobber-client-id
JOBBER_CLIENT_SECRET=your-jobber-client-secret
JOBBER_REDIRECT_URI=http://localhost:8080/api/jobber/callback

# Jobber API settings
JOBBER_API_URL=https://api.getjobber.com/api/graphql
JOBBER_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# QUICKBOOKS CONFIGURATION (OPTIONAL)
# ============================================
# OAuth credentials for QuickBooks
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=http://localhost:8080/api/quickbooks/callback

# QuickBooks settings
QUICKBOOKS_ENVIRONMENT=sandbox # or production
QUICKBOOKS_COMPANY_ID=your-company-id

# ============================================
# GOOGLE SERVICES CONFIGURATION (OPTIONAL)
# ============================================
# OAuth credentials for Google APIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/google/callback

# Google service-specific settings
GOOGLE_CALENDAR_ID=primary
GOOGLE_DRIVE_FOLDER_ID=your-shared-folder-id

# ============================================
# MATTERPORT CONFIGURATION (OPTIONAL)
# ============================================
MATTERPORT_API_KEY=your-matterport-api-key
MATTERPORT_API_SECRET=your-matterport-secret

# ============================================
# EMAIL CONFIGURATION (OPTIONAL)
# ============================================
# SendGrid for transactional emails
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@duetright.com
SENDGRID_FROM_NAME=DuetRight Dashboard

# ============================================
# SECURITY & AUTH CONFIGURATION
# ============================================
# JWT settings (if not using Firebase Auth exclusively)
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Session settings
SESSION_SECRET=your-session-secret
SESSION_EXPIRES_IN=24h

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Redis cache (optional but recommended for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=3600 # seconds

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry error tracking (optional but recommended)
SENTRY_DSN=https://your-key@sentry.io/your-project
SENTRY_ENVIRONMENT=development

# Logging configuration
LOG_LEVEL=debug # error, warn, info, debug
LOG_FORMAT=json # json or pretty

# ============================================
# API CONFIGURATION
# ============================================
# API versioning and limits
API_VERSION=v1
API_RATE_LIMIT_WINDOW=15 # minutes
API_RATE_LIMIT_MAX=100 # requests per window

# CORS settings
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Development-specific settings
DEV_DISABLE_AUTH=false
DEV_MOCK_SERVICES=false
DEV_LOG_REQUESTS=true

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Production URLs (update when deploying)
PRODUCTION_URL=https://dashboard.duetright.com
PRODUCTION_API_URL=https://api.duetright.com

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_SLACK_ENABLED=true
FEATURE_JOBBER_ENABLED=true
FEATURE_QUICKBOOKS_ENABLED=true
FEATURE_GOOGLE_ENABLED=true
FEATURE_MATTERPORT_ENABLED=false
FEATURE_EMAIL_ENABLED=true