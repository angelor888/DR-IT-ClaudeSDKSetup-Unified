# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control

# Server Configuration
NODE_ENV=development
PORT=8080
API_VERSION=v1
BASE_URL=http://localhost:8080
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----"
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Slack Configuration
FEATURE_SLACK_ENABLED=true
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret
SLACK_VERIFICATION_TOKEN=your-verification-token

# Jobber Configuration
FEATURE_JOBBER_ENABLED=true
JOBBER_CLIENT_ID=your-client-id
JOBBER_CLIENT_SECRET=your-client-secret
JOBBER_ACCESS_TOKEN=your-access-token
JOBBER_REFRESH_TOKEN=your-refresh-token

# Twilio Configuration
FEATURE_TWILIO_ENABLED=true
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_SECRET=your-webhook-secret

# SendGrid Configuration
FEATURE_EMAIL_ENABLED=true
SENDGRID_API_KEY=SG.your-api-key
SENDGRID_FROM_EMAIL=info@yourdomain.com

# Google APIs Configuration
FEATURE_GOOGLE_ENABLED=true
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_REFRESH_TOKEN=your-refresh-token
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret

# QuickBooks Configuration
FEATURE_QUICKBOOKS_ENABLED=true
QUICKBOOKS_CLIENT_ID=your-client-id
QUICKBOOKS_CLIENT_SECRET=your-client-secret
QUICKBOOKS_ACCESS_TOKEN=your-access-token
QUICKBOOKS_REFRESH_TOKEN=your-refresh-token
QUICKBOOKS_REALM_ID=your-realm-id
QUICKBOOKS_SANDBOX=false

# Other Services
AIRTABLE_API_KEY=your-api-key
GITHUB_TOKEN=ghp_your-token

# Grok AI Configuration (if enabled)
FEATURE_GROK_ENABLED=false
GROK_API_KEY=your-grok-api-key
GROK_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-beta

# Security
JWT_SECRET=your-jwt-secret
SESSION_SECRET=your-session-secret

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# Development Options
DEV_DISABLE_AUTH=false
DEV_MOCK_SERVICES=false
DEV_LOG_REQUESTS=true

# Feature Flags
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_REDIS_ENABLED=true
FEATURE_JOBS_ENABLED=true
FEATURE_SCHEDULER_ENABLED=true