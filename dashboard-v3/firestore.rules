rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authorized DuetRight team member
    function isAuthorizedUser() {
      return request.auth != null && 
             request.auth.token.email != null &&
             (request.auth.token.email == 'angelo@duetright.com' ||
              request.auth.token.email == 'stantheman@duetright.com' ||
              request.auth.token.email == 'austin@duetright.com' ||
              request.auth.token.email == 'info@duetright.com');
    }
    
    // Allow authorized users to read and write their own data
    match /users/{userId} {
      allow read, write: if isAuthorizedUser() && request.auth.uid == userId;
    }
    
    // Allow authorized users to read and write customers
    match /customers/{document=**} {
      allow read, write: if isAuthorizedUser();
    }
    
    // Allow authorized users to read and write jobs
    match /jobs/{document=**} {
      allow read, write: if isAuthorizedUser();
    }
    
    // Allow authorized users to read and write communications
    match /communications/{document=**} {
      allow read, write: if isAuthorizedUser();
    }
    
    // Allow authorized users to read and write tasks
    match /tasks/{document=**} {
      allow read, write: if isAuthorizedUser();
    }
    
    // Allow authorized users to read and write automations
    match /automations/{document=**} {
      allow read, write: if isAuthorizedUser();
    }
    
    // Allow authorized users to read and write settings
    match /settings/{document=**} {
      allow read, write: if isAuthorizedUser();
    }
    
    // Allow authorized users to read and write AI usage tracking
    match /ai_usage/{document=**} {
      allow read, write: if isAuthorizedUser();
    }
    
    // Allow authorized users to read and write conversations
    match /conversations/{document=**} {
      allow read, write: if isAuthorizedUser();
    }
    
    // Allow read access to test collection for connection testing
    match /test/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}