rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write customers
    match /customers/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write jobs
    match /jobs/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write communications
    match /communications/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write tasks
    match /tasks/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write automations
    match /automations/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write settings
    match /settings/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to test collection for connection testing
    match /test/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}